<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.huzhipeng.coin.ui.activity.main.MainActivity">

    <TextView
        android:id="@+id/mustSymbol"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x60"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20"
        android:textColor="@color/color_333" />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="@color/color_f2f2f2" />
    <TextView
        android:id="@+id/mustSymbolTrade"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x70"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20"
        android:textColor="@color/color_333" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="@color/color_f2f2f2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x60"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/symbol"
            android:layout_width="@dimen/x120"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x20"
            android:text="交易对"
            android:textColor="@color/color_333" />

        <TextView
            android:id="@+id/price"
            android:layout_width="@dimen/x160"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x10"
            android:text="价格"
            android:textColor="@color/color_333" />

        <TextView
            android:id="@+id/tradeAveCount"
            android:layout_width="@dimen/x60"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x10"
            android:gravity="center"
            android:text="5秒"
            android:textColor="@color/color_333" />

        <TextView
            android:id="@+id/muniteAradeAveCount"
            android:layout_width="@dimen/x60"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x10"
            android:gravity="center"
            android:text="1秒"
            android:textColor="@color/color_333" />

        <TextView
            android:id="@+id/gain"
            android:layout_width="@dimen/x120"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x10"
            android:gravity="center"
            android:text="涨幅10s"
            android:textColor="@color/color_333" />

        <TextView
            android:id="@+id/gain24"
            android:text="涨幅24h"
            android:layout_width="@dimen/x120"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x10"
            android:gravity="center"
            android:textColor="@color/color_333" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="@color/color_f2f2f2" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager">

    </android.support.v7.widget.RecyclerView>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="@color/color_f2f2f2"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvTime"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/x30"
            android:textColor="@color/color_333"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x84" />
        <TextView
            android:id="@+id/tvTime1"
            android:gravity="center_vertical"
            android:paddingRight="@dimen/x30"
            android:layout_alignParentRight="true"
            android:textColor="@color/color_333"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x84" />


    </RelativeLayout>

</LinearLayout>
