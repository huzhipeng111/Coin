<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginRight="@dimen/x30"
        android:layout_marginTop="@dimen/x60"
        android:layout_marginBottom="@dimen/x30"
        app:cardCornerRadius="@dimen/x50"
        app:cardElevation="@dimen/x10"
        android:background="@color/white"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tvContent"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/x30"
                android:textColor="@color/color_333"
                android:gravity="center"
                android:minHeight="@dimen/x100"
                android:layout_height="wrap_content"
                android:text="报警了，报警了。。。。。。。。" />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:background="@color/color_f2f2f2"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/x30"
                android:layout_marginRight="@dimen/x30"
                android:layout_height="@dimen/x84">
                <TextView
                    android:id="@+id/tvDismiss"
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:text="隐藏"
                    android:textColor="@color/color_333"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/x30"
                    android:layout_height="@dimen/x100" />
                <View
                    android:layout_width="@dimen/x1"
                    android:layout_height="match_parent"
                    android:background="@color/color_f2f2f2"/>
                <TextView
                    android:id="@+id/tvEnterBinance"
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:textColor="@color/color_333"
                    android:textSize="16sp"
                    android:text="币安"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/x30"
                    android:layout_marginRight="@dimen/x30"
                    android:layout_height="@dimen/x100" />
                <View
                    android:layout_width="@dimen/x1"
                    android:layout_height="match_parent"
                    android:background="@color/color_f2f2f2"/>
                <TextView
                    android:id="@+id/tvEnterApp"
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:textColor="@color/color_333"
                    android:textSize="16sp"
                    android:text="进入"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/x30"
                    android:layout_marginRight="@dimen/x30"
                    android:layout_height="@dimen/x100" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>