<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="7dp"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:paddingBottom="7dp"
    android:background="@color/white">

    <EditText
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="@dimen/x18"
        android:paddingRight="@dimen/x18"
        android:id="@+id/query"
        android:inputType="textEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@drawable/search_background"
        android:drawableLeft="@mipmap/icon_search"
        android:drawablePadding="@dimen/x16"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:textColorHint="#8C8C8C"
        android:textSize="16sp"
        android:hint="搜索"
        android:layout_marginLeft="@dimen/x31"
        android:layout_marginRight="@dimen/x31"
        android:singleLine="true"
        android:imeOptions="actionSearch"/>

    <ImageButton
        android:id="@+id/search_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/query"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/x5"
        android:background="@android:color/transparent"
        android:padding="6dp"
        android:src="@drawable/ease_search_clear"
        android:visibility="invisible" />

</RelativeLayout>